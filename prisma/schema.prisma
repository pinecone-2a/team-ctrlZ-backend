// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(nanoid())
  email String @unique
  password String
  username String @unique
  receivedDonations Donation[] @relation("RecipientDonations")
  sentDonations Donation[] @relation("DonorDonations")
  profile Profile?
  createdAt DateTime @default(now())
  bankCard BankCard?
  updatedAt DateTime @updatedAt
} 
model BankCard {
  id String @id @default(nanoid())
  country String
  firstName String
  lastName String
  cardNumber String @db.VarChar(19)
  expiryDate DateTime
  userId String @unique
  user User @relation(fields: [userId],references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Profile {
  id String @id @default(nanoid())
  name String
  about String
  avatarImage String
  socialMediaURL String
  backgroundImage String
  successMessage String
  user User @relation(fields: [userId], references: [id])
  userId String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Donation {
  id String @id @default(nanoid())
  amount Int
  specialMessage String
  socialURLOrBuyMeACoffee String
  recipentId String 
  recipient User @relation("RecipientDonations", fields: [recipentId], references: [id])
  donorId String 
  donor User @relation("DonorDonations", fields: [donorId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
